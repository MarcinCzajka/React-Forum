{
  "name": "react-forum",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "concurrently --kill-others \"npm run start-server\" \"npm run start-client\"",
    "start-server": "nodemon server/server.js",
    "start-client": "cd client && npm start",
    "i-all": "concurrently \"npm install\" \"cd client && npm install\" \"cd server && npm install\""
  },
  "devDependencies": {
    "concurrently": "^4.1.1"
  }
}
